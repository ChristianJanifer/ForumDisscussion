@{
    Layout = "_LayoutAdmin";
}

<section>
    <div class="text-left">
        <div class="text-black">
            <h2>List Account Member</h2>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="tableMember" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id Member</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Birth Date</th>
                            <th>Gender</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody class="tbody"></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

