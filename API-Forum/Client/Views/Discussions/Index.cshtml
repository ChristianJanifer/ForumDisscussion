@{
    Layout = "_LayoutMember";
}


<div class="container-fluid p-3 text-black">
    <div class="text-black">
        <h2>List Discussion</h2>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-primary" id="tableDiscussion" width="150%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Discussion Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Date</th>
                            <th>StatusComt</th>
                            <th>User Id</th>
                            <th>Category Id</th>
                            <th>Type Id</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="tbody" id="listDiscussion"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

